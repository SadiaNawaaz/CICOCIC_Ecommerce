<!-- ====== 4.1 Contact from section ====== -->
<section class="contact">
    <div class="container pt-5">
        @*@if (TempData["success"] != null)
            {
            <div id="footer-message"></div>
            }*@
        <form data-aos="zoom-in" asp-controller="Contact" asp-action="Create">
            <div class="d-flex gap-md-5 gap-sm-3 gap-3 flex-md-row flex-sm-column flex-column gap-md-4 gap-sm-3 mb-3">
                <input asp-for="Name" placeholder="Naam" />
                <input asp-for="PhoneNo" placeholder="Telefoonnummer" />
            </div>
            <div class="row">
                <div class="col-md-6">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <span asp-validation-for="PhoneNo" class="text-danger ms-3"></span>
                </div>
            </div>


            <div class="d-flex gap-md-5 gap-sm-3 gap-3 flex-md-row flex-sm-column flex-column gap-md-4 gap-sm-3 mb-3">
                <input asp-for="Email" placeholder="Emailadres" />
                <input asp-for="Address" placeholder="Adres Woonplaats" />
            </div>
            <div class="row">
                <div class="col-md-6">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <span asp-validation-for="Address" class="text-danger ms-3"></span>
                </div>
            </div>
            <div>
                <textarea asp-for="Message" placeholder="Bericht" rows="3"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn_hover1 mt-5">Zend Bericht</button>
        </form>


        <div data-aos="flip-left" class="contact-address d-flex justify-content-center align-items-md-center align-items-sm-start align-items-start gap-lg-0 gap-md-2 gap-sm-2 gap-2">
            <div class="d-flex align-items-center gap-lg-4 gap-md-3 gap-4">
                <i class="fa-sharp fa-solid fa-house"></i>
                <a href="#" class="p-0">Cico Concepts BV. Hoenderkamp 20, 7812 VZ EMMEN, Nederland</a>
            </div>
            <div>
                <hr>
            </div>
            <div class="d-flex align-items-center gap-lg-4 gap-md-3 gap-4">
                <i class="fa-solid fa-phone"></i>
                <a href="#" class="p-0">+31 623 195 505</a>
            </div>
            <div>
                <hr>
            </div>
            <div class="d-flex align-items-center gap-lg-4 gap-md-3 gap-4">
                <i class="fa-solid fa-envelope"></i>
                <a href="#" class="p-0">info@cicosafe.com</a>
            </div>
        </div>


        <h2>Onze locatie</h2>
    </div>
</section>
<!-- ====== End of 4.1 Contact from section ====== -->
