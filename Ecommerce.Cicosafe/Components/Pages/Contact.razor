        <h2>Contact Ons </h2>
        <div class="d-flex justify-content-center align-items-center">
            <a href="#">Home</a>
            <span> // </span>
            <a  href="#">Contact Ons</a>
        </div>
    </section>
    <!-- ====== End of 3.2. hero section ====== -->
