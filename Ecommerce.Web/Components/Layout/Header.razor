                                                        <option value="10">&lt; 10 km</option>
                                                        <option value="15">&lt; 15 km</option>
                                                        <option value="25">&lt; 25 km</option>
                                                        <option value="50">&lt; 50 km</option>
                                                        <option value="70">&lt; 70 km</option>
                                                        <option value="75">&lt; 75 km</option>
                                                    </select>
                                                </div>
