@inject IBrandService BrandService

@if (Brands != null && Brands.Count > 0)
    {


    <div class="container mb-5">

        <div class="brand-slider">



            <h4 class="section-title clearfix">
                <span class="flex-1">
                    We’re just keep growing with 50+ trusted brands

                </span>

            </h4>
            <div class="slide-track">

                @foreach (var brand in Brands)
                    {
                    <div class="slide">
                        <a href="/Brand?Id=@brand.Id"></a> <img src="@UrlHelper.GetBrandImageUrl(brand.Id, brand.ImageUrl)" alt="@brand.Name" class="imgscroll">
                    </div>
                    }

            </div>
        </div>
    </div>


    }
else
    {
    }

<br />
<br />
<div class="container mb-5 mt-70px">
    <div class="best-product-area lf-padding">
        <div class="product-wrapper bg-height" style="background-image: url('assets/img/slider/card.png.webp') ">
            <div class="container position-relative">
                <div class="row justify-content-between align-items-end">
                    <div class="product-man position-absolute  d-none d-lg-block">
                        <img src="/assets/img/slider/card-man.png.webp" alt="" style="max-height:550px">
                    </div>
                    <div class="col-xl-2 col-lg-2 col-md-2 d-none d-lg-block">
                        <div class="vertical-text">
                            <span>CICO</span>
                        </div>
                    </div>
                    <div class="col-xl-8 col-lg-8">
                        <div class="best-product-caption">
                            <h2 style="font-family:Poppins" , sans-serif;">Find The Best Product<br> from Our Shop</h2>
                            <button class="btn btn-dark btn-lg">Shop Now</button>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Shape -->
        <div class="shape bounce-animate d-none d-md-block">
            <img src="assets/img/categori/card-shape.png" alt="">
        </div>
    </div>
</div>

@code
{

    private List<Brand> Brands { get; set; } = new List<Brand>();


    protected override async Task OnAfterRenderAsync(bool firstRender)
        {
        if (firstRender)
            {
            await LoadDataAsync();

            }
        }
    private async Task LoadDataAsync()
        {
        await LoadBrandsAsync();
        }

    private async Task LoadBrandsAsync()
        {
        var response = await BrandService.GetTopBrandsAsync();
        if (response.Success)
            {
            Brands = response.Data;
            StateHasChanged();
            }
        }
}


