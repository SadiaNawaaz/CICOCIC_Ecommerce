@code {
    [Parameter]
    public EventCallback PlaceOrderCallback { get; set; }

    private async Task OnPlaceOrder()
        {
        if (PlaceOrderCallback.HasDelegate)
            {
            await PlaceOrderCallback.InvokeAsync();
            }
        }
}