
@using Ecommerce.Shared.Entities.Orders;
<div class="section-container" id="checkout-info">
    <!-- BEGIN container -->
    <div class="container">
        <!-- BEGIN checkout -->
        <div class="checkout">
            <EditForm Model="@shippingInfo" OnValidSubmit="@HandleValidSubmit">
                <DataAnnotationsValidator />

                <!-- BEGIN checkout-body -->
                <div class="checkout-body">
                    <div class="mb-2 row">
                        <label class="col-form-label col-md-4 text-lg-end">
                            First Name <span class="text-danger">*</span>
                        </label>
                        <div class="col-md-4">
                            <InputText class="form-control" @bind-Value="shippingInfo.FirstName" placeholder="First Name" />
                            <ValidationMessage For="@(() => shippingInfo.FirstName)" />
                        </div>
                    </div>

                    <div class="mb-2 row">
                        <label class="col-form-label col-md-4 text-lg-end">
                            Last Name <span class="text-danger">*</span>
                        </label>
                        <div class="col-md-4">
                            <InputText class="form-control" @bind-Value="shippingInfo.LastName" placeholder="Last Name" />
                            <ValidationMessage For="@(() => shippingInfo.LastName)" />
                        </div>
                    </div>

                    <div class="mb-2 row">
                        <label class="col-form-label col-md-4 text-lg-end">
                            Company Name (optional)
                        </label>
                        <div class="col-md-8">
                            <InputText class="form-control" @bind-Value="shippingInfo.CompanyName" placeholder="Company Name" />
                        </div>
                    </div>

                    <div class="mb-2 row">
                        <label class="col-form-label col-md-4 text-lg-end">
                            Area Code <span class="text-danger">*</span>
                        </label>
                        <div class="col-md-4">
                            <InputText class="form-control" @bind-Value="shippingInfo.AreaCode" placeholder="Area Code" />
                            <ValidationMessage For="@(() => shippingInfo.AreaCode)" />
                        </div>
                    </div>

                    <div class="mb-2 row">
                        <label class="col-form-label col-md-4 text-lg-end">
                            Primary Phone <span class="text-danger">*</span>
                        </label>
                        <div class="col-md-4">
                            <InputText class="form-control" @bind-Value="shippingInfo.PrimaryPhone" placeholder="Primary Phone" />
                            <ValidationMessage For="@(() => shippingInfo.PrimaryPhone)" />
                        </div>
                    </div>

                    <div class="mb-2 row">
                        <label class="col-form-label col-md-4 text-lg-end">
                            Street Address <span class="text-danger">*</span>
                        </label>
                        <div class="col-md-4">
                            <InputText class="form-control" @bind-Value="shippingInfo.StreetAddress" placeholder="Street Address" />
                            <ValidationMessage For="@(() => shippingInfo.StreetAddress)" />
                        </div>
                    </div>

                    <div class="mb-2 row">
                        <label class="col-form-label col-md-4 text-lg-end">
                            ZIP Code <span class="text-danger">*</span>
                        </label>
                        <div class="col-md-4">
                            <InputText class="form-control" @bind-Value="shippingInfo.ZipCode" placeholder="ZIP Code" />
                            <ValidationMessage For="@(() => shippingInfo.ZipCode)" />
                        </div>
                    </div>

                    <div class="mb-2 row">
                        <label class="col-form-label col-md-4"></label>
                        <div class="col-md-4">
                            <div class="form-check">
                                <InputCheckbox class="form-check-input" @bind-Value="shippingInfo.IsBusinessAddress" />
                                <label class="form-check-label" for="business_address">
                                    This is a business address
                                </label>
                            </div>
                        </div>
                    </div>
                    <hr />
              
                </div>
                <!-- END checkout-body -->
            </EditForm>
        </div>
        <!-- END checkout -->
    </div>
    <!-- END container -->
</div>


@code {
    public Order shippingInfo = new Order();

    private void HandleValidSubmit()
        {
        // Handle the submission logic, e.g., saving shipping information
        Console.WriteLine("Shipping info saved successfully");
        }
 
}
