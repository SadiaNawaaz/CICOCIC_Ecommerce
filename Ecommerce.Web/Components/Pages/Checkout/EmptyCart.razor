@page "/empty-Cart"

@inject NavigationManager NavigationManager



<div class="empty-cart-wrapper d-flex flex-column justify-content-center align-items-center" style="margin:50px">
    <img src="/assets/img/cart/Empty_Cart.png" alt="Empty Cart" class="cart-icon" style="height:100px;width:100px" />
    <h4 class="mt-3">Your Bag is Empty</h4>
    <button class="btn btn-dark mt-3" @onclick="ReturnToShop">RETURN TO SHOP</button>
</div>

@code {


    void ReturnToShop()
        {
        NavigationManager.NavigateTo("/"); 
        }
}
