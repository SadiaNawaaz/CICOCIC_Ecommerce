            .toast {
    display: none;
    padding: 1.5 rem;
    color:
#fff;
    z-index: 1;
    position:absolute;
    width: 25 rem;
    top: 2 rem;
    border-radius: 1 rem;
    left: 50 % ;
}.toast-icon {
    display: flex;
    flex-direction:column;
    justif-content:center;
    padding:0 1 rem;
    font-size:2.5 rem;
}.toast-body {
    display: flex;
    flex-direction: column;
    flex: 1;
    padding-left: 1 rem;
}.toast-body p {
    margin-bottom: 0;
}.toast-visible {
    display: flex;
    flex-direction: row;
    animation: fadein 1.5 s;
}
@@keyframes fadein {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}
